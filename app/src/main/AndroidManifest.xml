<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.sayo.homeworkmanagementsystem">

    <!-- 允许网络请求 -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:usesCleartextTraffic="true">
        <activity
                android:name=".fragment.HomeworkItemListActivity"
                android:label="@string/title_homeworkitem_list"
                android:theme="@style/NoActionBar">

        </activity>
        <activity
                android:name=".HomeworkItemDetailActivity"
                android:label="@string/title_homeworkitem_detail"
                android:parentActivityName=".fragment.HomeworkItemListActivity"
                android:theme="@style/NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.sayo.homeworkmanagementsystem.fragment.HomeworkItemListActivity"/>
        </activity>
        <activity android:name=".activity.BanBenActivity"/>
        <activity android:name=".activity.UpdateItemActivity"/>
        <activity android:name=".activity.UpdateActity"/>
        <activity android:name=".activity.AddActivity"/>
        <activity android:name=".activity.XiangQingActivity"/>
        <activity android:name=".activity.MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity> <!-- 9.0闪退 -->
        <uses-library
                android:name="org.apache.http.legacy"
                android:required="false"/>

        <activity android:name=".activity.RegistActivity"/>
        <activity android:name=".activity.LoginActivity">

        </activity>
    </application>

</manifest>