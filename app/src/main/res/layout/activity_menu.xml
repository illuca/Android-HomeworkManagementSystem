<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".activity.MenuActivity">

    <androidx.viewpager.widget.ViewPager
            android:background="@drawable/black_background_layer"
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
    >
    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_layout"
                    android:orientation="vertical">
                <ImageView
                        android:id="@+id/home_img_view"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/home"/>
                <TextView
                        android:id="@+id/home_text_view"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:text="首页"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/homework_list_layout"
                    android:orientation="vertical">
                <ImageView
                        android:id="@+id/homework_list_img_view"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/homework_list"/>
                <TextView
                        android:id="@+id/homework_list_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textColor="#ffffff"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="作业列表"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/submitted_layout"
                    android:orientation="vertical">
                <ImageView
                        android:id="@+id/submitted_img_view"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/submitted"/>
                <TextView
                        android:id="@+id/submitted_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textColor="#ffffff"

                        android:gravity="center"
                        android:text="已提交"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_layout"
                    android:orientation="vertical">
                <ImageView
                        android:id="@+id/user_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/user"/>
                <TextView
                        android:id="@+id/user_text_view"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:textColor="#ffffff"

                        android:text="用户"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>